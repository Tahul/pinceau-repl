{
  "name": "@vue/repl",
  "version": "1.3.2",
  "description": "Vue component for editing Vue components",
  "homepage": "https://github.com/vue/repl#readme",
  "bugs": {
    "url": "https://github.com/vue/repl/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue/repl.git"
  },
  "license": "MIT",
  "author": "Evan You",
  "exports": {
    ".": {
      "types": "./dist/repl.d.ts",
      "require": "./dist/ssr-stub.js",
      "import": "./dist/vue-repl.js"
    },
    "./monaco-editor": {
      "types": "./dist/src/editor/MonacoEditor.vue.d.ts",
      "require": null,
      "import": "./dist/vue-repl-monaco-editor.js"
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "main": "dist/ssr-stub.js",
  "module": "dist/vue-repl.js",
  "types": "dist/repl.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:types": "vue-tsc -p tsconfig.build.json && api-extractor run -c api-extractor.json && rimraf dist/src",
    "dev": "vite --force",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prepublishOnly": "npm run build && npm run build-types"
  },
  "dependencies": {
    "@babel/parser": "^7.21.2",
    "@babel/types": "^7.21.2",
    "@microsoft/api-extractor": "^7.34.4",
    "@types/node": "^18.14.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@volar/monaco": "1.3.0-alpha.0",
    "@volar/vue-language-service": "^1.2.0",
    "@vue/compiler-sfc": "^3.2.47",
    "fflate": "^0.7.4",
    "hash-sum": "^2.0.0",
    "monaco-editor": "^0.36.0",
    "monaco-editor-core": "^0.36.0",
    "monaco-editor-textmate": "^4.0.0",
    "monaco-textmate": "^3.0.1",
    "monaco-volar": "^0.1.0",
    "nanoid": "^4.0.1",
    "onigasm": "^2.2.5",
    "rimraf": "^4.1.2",
    "source-map-js": "^1.0.2",
    "sucrase": "^3.29.0",
    "typescript": "^4.9.5",
    "unenv": "^1.2.1",
    "vite": "^4.1.4",
    "vite-plugin-vue-component-preview": "^1.1.5",
    "vscode-uri": "^3.0.7",
    "vue-tsc": "^1.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "eslint": "^8.35.0",
    "execa": "^5.1.1",
    "vue": "^3.2.47"
  },
  "peerDependencies": {
    "vue": "^3.2.37"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "monaco-editor-core": "0.35.0"
      }
    },
    "overrides": {
      "@volar/vue-language-core": "1.2.0-patch.2"
    }
  }
}
